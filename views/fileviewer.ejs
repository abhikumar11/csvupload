<link rel="stylesheet" type="text/css" href="../css/fileviewer.css">
<link rel="stylesheet" type="text/css" href="../css/header.css">
<script type="text/javascript" src="../js/sortdata.js"></script>


<div class="nav-bar" style="position: fixed;">
    <a href="/" class="back-icon">
        <i class="fa-solid fa-circle-arrow-left" style="color: red;"></i>
    </a>    
    <div class="title">
        CSV Data
    </div>
    <div class="sub-title">
        Extractor
    </div>
    <div class="file-name">
        <%= fileName %>
    </div>
</div>
<div class="search-bar">
    <form id="searchForm">
        <div class="search-box">
            <input type="text" id="search-input" placeholder="Search data...">
            <button id="go" class="search-btn" type="button">Search</button>
        </div>
    </form>
    <div>
        <p id="total-rows">Total Rows: <%=length%></p>
    </div>
</div>
<div class="result-aria">
    <table id="table">
        <thead onclick="sortTable(0)">
            <tr>
            <% for(let h of head) { %>
                <th><%= h %></th>
            <% } %>
            </tr>
        </thead>
        <tbody>
            <% for(let row of data) { %>
            <tr>
                <% for(let key of Object.keys(row)) { %>
                    <td><%= row[key] %></td>
                <% } %>
            </tr>
            <% } %>
        </tbody>
    </table>
   
</div>